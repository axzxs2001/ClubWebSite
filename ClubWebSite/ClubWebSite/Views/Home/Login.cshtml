@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>登录</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <style>
        .main {
            height: 600px;
            width: 100%;
            background: url(/images/back.jpg) center bottom no-repeat;
            position: relative;
        }

        .col-md-12 {
            text-align: center;
            margin-top: 10px;
        }

        .input-group {
            width: 300px;
            margin: 0 auto;
        }

        .input-group-addon {
            width: 80px;
        }
    </style>
</head>
<body>
    <div class="main">
        <br />
        <span style="margin-left:30%; font-size:4em;color:#808080;font-family:'Yu Gothic UI'">欢迎登陆</span><br />
        <span style="margin-left:30%; font-size:2.2em;color:#808080;font-family:'Yu Gothic UI'">dotnet社区联盟</span>
        <form method="post" action="/Login">
            <div class="row" style="margin-top:100px">
                <div class="col-md-12">
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">用户姓名</span>
                        <input type="text" class="form-control" name="userName" aria-describedby="basic-addon1">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">用户密码</span>
                        <input type="password" class="form-control" name="password" aria-describedby="basic-addon1">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="input-group" style="text-align:right;">
                        <input type="hidden" value="@ViewBag.returnUrl" name="returnUrl" />
                        <button type="submit" class="btn btn-primary" style="width:90px">登录</button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="input-group" style="text-align:left;">
                        @if (ViewBag.error != null)
                        {
                            <font color="red">@ViewBag.error</font>
                        }
                    </div>
                </div>
            </div>
        </form>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
</body>
</html>